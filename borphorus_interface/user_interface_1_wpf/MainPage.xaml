<Page
    x:Class="user_interface_1_wpf.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:user_interface_1_wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="Text">
            <Setter
                Property="FocusVisualPrimaryBrush"
                Value="White"/>
            <Setter
                Property="FontFamily"
                Value="Consolas"/>
            <Setter
                Property="FontSize"
                Value="12"/>
            <Setter
                Property="HorizontalTextAlignment"
                Value="Center"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Pivot
            Grid.Row="0"
            KeyDown="OnKeyUp">
            <PivotItem
                Header="Measurements">
                <Frame>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid
                            Background="#FF0078D7"
                            Grid.Column="0"
                            Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ListView
                                Grid.Column="0">
                                <TextBlock
                                    Style="{StaticResource Text}"
                                    Text="Ship location:"/>
                                <TextBlock
                                    Style="{StaticResource Text}"
                                    Text="Timestamp:"/>
                                <TextBlock
                                    Style="{StaticResource Text}"
                                    Text="Total Cost:"/>
                                <TextBlock
                                    Style="{StaticResource Text}"
                                    Text="Result:"/>
                            </ListView>
                            <ListView
                                Grid.Column="1"
                                ItemsSource="{x:Bind ship.ShipViewItems}">
                                <ListView.ItemTemplate>
                                    <DataTemplate
                                        x:DataType="local:ShipViewItem">
                                        <TextBlock
                                            Style="{StaticResource Text}"
                                            Text="{x:Bind Attribute}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                        <Grid
                            Background="#FFE74856"
                            Grid.Column="1"
                            Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <ListView Grid.Column="0">
                                <TextBlock
                                    Style="{StaticResource Text}"
                                    Text="Submarine location:"/>
                                <TextBlock
                                    Style="{StaticResource Text}"
                                    Text="Timestamp:"/>
                            </ListView>
                            <ListView
                                Grid.Column="1"
                                ItemsSource="{x:Bind submarine.SubmarineViewItems}">
                                <ListView.ItemTemplate>
                                    <DataTemplate
                                        x:DataType="local:SubmarineViewItem">
                                        <TextBlock
                                            Style="{StaticResource Text}"
                                            Text="{x:Bind Attribute}"/>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                        <ListViewItem
                            Background="#FF627588"
                            Grid.Row="1"
                            Grid.ColumnSpan="2">
                            <ListView>
                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsStackPanel
                                            Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                                <ListView>
                                    <TextBlock
                                        Style="{StaticResource Text}"
                                        Text="Probe_ID      Batch_ID     Timestamp      Location    Precision      Decay          Cost        Submarine?        Result"/>
                                </ListView>
                            </ListView>
                        </ListViewItem>
                        <ScrollViewer
                            Grid.Row="2"
                            Grid.ColumnSpan="2">
                            <ListView
                                Background="#FF627588"
                                ItemsSource="{x:Bind batches.BatchesViewItems}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate
                                        x:DataType="local:BatchesViewItem">
                                            <ListView
                                            ItemsSource="{x:Bind BatchViewItems}">
                                                <ListView.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <ItemsStackPanel
                                                        Orientation="Horizontal"/>
                                                    </ItemsPanelTemplate>
                                                </ListView.ItemsPanel>
                                                <ListView.ItemTemplate>
                                                    <DataTemplate
                                                    x:DataType="local:BatchViewItem">
                                                        <TextBlock
                                                        Style="{StaticResource Text}"
                                                        Text="{x:Bind Attribute}"/>
                                                    </DataTemplate>
                                                </ListView.ItemTemplate>
                                            </ListView>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                        </ScrollViewer>
                    </Grid>
                </Frame>
            </PivotItem>
            <PivotItem
                Header="Strategy">
                <Image
                    Name="Graph"/>
            </PivotItem>
        </Pivot>
        <ListView
            Grid.Row="1">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
            <Button
                Click="OnPreviousClick"
                HorizontalAlignment="Center"
                IsEnabled="False"
                Name="Previous">
                <SymbolIcon Symbol="Previous"/>
            </Button>
            <Button
                Click="OnNextClick"
                HorizontalAlignment="Center"
                IsEnabled="False"
                Name="Next">
                <SymbolIcon Symbol="Next"/>
            </Button>
            <Button
                Click="OnPauseClick"
                HorizontalAlignment="Center"
                IsEnabled="False"
                Name="Pause">
                <SymbolIcon Symbol="Pause"/>
            </Button>
            <Button
                Click="OnStopClick"
                HorizontalAlignment="Center"
                IsEnabled="False"
                Name="Stop">
                <SymbolIcon Symbol="Stop"/>
            </Button>
            <Button
                Click="OnRepeatAllClick"
                HorizontalAlignment="Center"
                IsEnabled="False"
                Name="RepeatAll">
                <SymbolIcon Symbol="RepeatAll"/>
            </Button>
        </ListView>
    </Grid>
</Page>